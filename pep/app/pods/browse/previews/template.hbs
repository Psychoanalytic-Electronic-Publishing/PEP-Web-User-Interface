<Page::Content>
    <div class="py-3 px-4">
        <div class="container">
            <h2 class="text-2xl font-bold mb-4">Book Previews</h2>
            <div class="row">
                {{#each @model as |document|}}
                    <div class="col-6 col-md-4 col-xl-3">
                        <LinkTo @route="browse.read" @model={{document.id}}>
                            <Image
                                @source="/assets/images/784.jpg.webp"
                                alt={{t "alt.brandingImageUrl"}}
                                class="w-100 mb-2"
                            />
                            <span
                                class="mb-2"
                                style="display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;overflow: hidden;"
                            >
                                {{document.title}}
                            </span>
                            <span
                                style="display: -webkit-box;-webkit-line-clamp: 1;-webkit-box-orient: vertical;overflow: hidden;"
                            >
                                {{document.authorMast}}
                            </span>
                        </LinkTo>
                    </div>

                {{/each}}
            </div>
        </div>
    </div>
</Page::Content>