<Page::Content>
    <div class="py-3 px-4">
        <div class="card">
            <div class="card-body">
                <h2 class="text-2xl font-bold mb-3">{{t "browse.previews.title"}}</h2>
                <p class="mb-4">{{t "browse.previews.description"}}</p>
                <h3 class="text-2xl font-bold mb-3">{{t "browse.previews.subtitle"}}</h3>
                <p class="mb-5">{{t "browse.previews.subtitleDescription"}}</p>
                <div class="grid-layout">
                    {{#each @model as |document|}}
                        <LinkTo @route="browse.read" @model={{document.id}}>
                            <div class="browse-preview-card">
                                <div class="image-container">
                                    <Image
                                        @source="{{this.imageUrl}}/{{document.PEPCode}}.{{document.vol}}.THUMBNAIL"
                                        alt="{{t 'browse.previews.alt' title=document.title}}"
                                    />
                                </div>
                                <div class="text-content-container">
                                    <span
                                        class="mb-2"
                                        style="display: -webkit-box;-webkit-line-clamp: 4;-webkit-box-orient: vertical;overflow: hidden;"
                                    >
                                        {{document.title}}
                                    </span>
                                    <span
                                        class="text-muted"
                                        style="display: -webkit-box;-webkit-line-clamp: 1;-webkit-box-orient: vertical;overflow: hidden;;"
                                    >
                                        {{document.authorMast}}
                                    </span>
                                </div>
                            </div>
                        </LinkTo>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</Page::Content>