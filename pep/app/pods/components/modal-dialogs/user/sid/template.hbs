<ModalDialog @onClose={{@onClose}} @size="md" @clickOutsideToClose={{false}} as |Modal|>
    <Modal.header @title="Warning!" />
    <Modal.body>
        <div class="mb-2">
            <h5>
                Your PEP-Web access may be at risk!
            </h5>
            {{#if this.session.isAuthenticated}}
                <p class="text-muted font-size-secondary mb-0">
                    Blah blah blah blahh... explanation as to what is going on with SID and why you should click
                    "Register on PaDS" to create your own account at a preferential rate.
                </p>

                <p class="text-muted font-size-secondary mb-0">
                    You can close this pop-up, but we'll continue to pester you until you comply.
                </p>
            {{/if}}
        </div>
    </Modal.body>
    <Modal.footer>
        {{#if this.currentUser.user.paDSHomeURL}}
            <Button @type="primary" @label="Register on PaDS" @action={{this.openPadsTab}} />
        {{/if}}
    </Modal.footer>
</ModalDialog>