{{! template-lint-disable no-invalid-interactive }}

<div
    class="document-text
        {{@document.sourceType}}
        {{if this.currentUser.preferences.glossaryFormattingEnabled 'glossary-highlight'}}
        {{this.currentUser.textJustification.class}}
        {{if @hasWatermark 'has-watermark'}}"
    {{on "click" this.onDocumentClick}}
    {{did-insert this.parseDocument}}
    {{did-update this.setupListeners this.text}}
    {{did-update this.parseDocument @document}}
    {{did-value-update this.parseDocument this.currentUser.preferences.translationConcordanceEnabled}}
    {{did-update (fn this.scrollToSearchHit @searchHitNumber) @searchHitNumber}}
>
    <div class="watermark"></div>
    {{html-safe this.text}}
</div>