<HeadLayout />

{{page-title (t "brand.name")}}
<Progress::Bar class="app-progress-bar" @light={{true}} />
<div class="application-container" {{register-keyboard-shortcuts shortcuts=this.shortcuts}}>
    {{outlet "header"}}
    <InformationBar class="app-information-bar" />
    <div class="application-content">
        {{outlet "nav"}}
        {{outlet}}
        {{outlet "sidebar"}}
        <Page::Sidebar::Mask />
    </div>
    {{outlet "footer"}}
</div>
<Page::Drawer @openAboutModal={{this.openAboutModal}} showIntroTour={{this.showIntroTour}} />
<NotificationContainer @position="top" />
<ModalOutlet />
